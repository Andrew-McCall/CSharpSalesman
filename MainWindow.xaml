<Window x:Class="Salesman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salesman"
        mc:Ignorable="d"
        Title="Andrew's Salesman" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FFFFEAD2">
        <Button Content="Clear" HorizontalAlignment="Center" Margin="-400,10,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Button_Click"/>
        <Button Content="Add Point" HorizontalAlignment="Center" Margin="-125,10,0,0" VerticalAlignment="Top" Width="74" Click="Add_Point_Button_Click"/>
        <Button Content="Randomise" HorizontalAlignment="Center" Margin="125,10,0,0" VerticalAlignment="Top" Width="75" Click="Randomise_Button_Click"/>
        <Button Content="Calculate" HorizontalAlignment="Center" Margin="400,10,0,0" VerticalAlignment="Top" Width="75" Click="Calculate_Button_Click" />

        <Canvas Name="Markers" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,40,10,10" Background="White" MouseLeftButtonDown="Marker_Click"/>
        <Canvas Name="Lines" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,40,10,10" MouseLeftButtonDown="Marker_Click"/>

    </Grid>
</Window>
